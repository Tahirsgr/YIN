<body class="container-fluid bg-white vh-100 overflow-hidden imagesB p-0">
    <div class="card-container mt-5 pt-5">
      <div class="title">
    <h4 class=" text-center text-white">Sign Up to Yield</h4>
    </div>
    <div class="card mt-4 card-detail">
        <div class="card-body">
            <div class="card-title mt-4 mb-4 text-center text-muted card-titles">
                Join as Brand or Influencer
            </div>
            <div class="d-flex justify-content-center align-content-center">
                <div class="px-3 py-2 package-card"  id="div1">
                    <div class="d-flex  justify-content-between mt-2">
                    <img src="/signup/zip.png" class="image-icons"/>
                      <div class="form-check">
                  <input type="radio" class="form-check-input" id="radio1" name="radioGroup" value="" >
                   
      
                     </div>
                     </div>
                <p class="text-muted mt-2">I'm brand,<br />hiring influencer</p>
                </div>
                 <div class="px-3 py-2 ml-5 package-card"  id="div2">
                     <div class="d-flex  justify-content-between mt-2">
                      <img src="/signup/profile.png" class="image-icons"/>
                     <div class="form-check">
            <input type="radio" class="form-check-input" id="radio2" name="radioGroup" value="" >
            
     
                 </div>
                  </div>
                  <p class="text-muted mt-2">I'm influencer,<br />looking for brand</p>
                  
            </div>
           
        </div>
        <div class="mt-5 text-center">
         <button class="btn btn-secondary mb-5 w-50" style="opacity:0.8" type="button">Create Account</button>
       
         
            <div>
                <label class="text-muted">Already have  an account?</label> <a href="#" class="text-primary font-weight-bold">Log In</a>
            </div>
             </div>
    </div>
    </div>
    </div>

</body>

</html>



                  <!-- Add script to handle click event -->
<script>
$(document).ready(function() {
    // Click event handler for div1
    $("#div1").on("click", function() {
        // Select the associated radio button
        $("#radio1").prop("checked", true);
         $(".package-card").removeClass("selected");
                // Add selected class to clicked radio container
                $(this).addClass("selected");
         // Change border color and text color of clicked radio container
                $(this).css("border-color", "red");
                $(this).css("color", "red");
    });

    // Click event handler for div2
    $("#div2").on("click", function() {
        // Select the associated radio button
        // Change border color and text color of clicked radio container
           $(".package-card").removeClass("selected");
                // Add selected class to clicked radio container
                $(this).addClass("selected");
                $(this).css("border-color", "red");
                $(this).css("color", "red");
        $("#radio2").prop("checked", true);
    });
});


</script>
@page
@using YIN_Portal.Areas.Identity.Pages;
@model LoginModel

@{
    ViewData["Title"] = "User Account";
}

@*<h1>@ViewData["Title"]</h1>*@

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>User Account</title>
    <link rel="shortcut icon" href="/plugins/images/pak-logo-tr2.png" />
    <link rel="apple-touch-icon" sizes="512x512" href="/plugins/images/pak-logo-tr2.png" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.min.js" crossorigin="anonymous"></script>

    <!-- <link href="~/css/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/app.css" rel="stylesheet" /> -->
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/plugins/fontawesome-free/css/all.min.css">
    <!-- CSS Files -->
    <link href="/wizard/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/wizard/css/gsdk-bootstrap-wizard.css" rel="stylesheet" />



    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

    <style>
        
        .imagesB {
            /*background-image: url("/plugins/images/background.png");*/
            background-image: url("/img/Rectangle.png");
            background-color: #ffffff;
            background-repeat: no-repeat;
            background-size: cover;
            height: 100vh;
        }

        .flex-container {
            display: flex;
            flex-direction: row;
            justify-content: center;
            align-items: center;
        }

        .flex-item {
            width: 40%;
            height: 2px;
            background: #d4d0d0;
        }
        .wizard-card[data-color="azzure"] .moving-tab {
           display:none;
        }

        .nav-pills > li > a {
            text-transform:none !important;           
            font-size: 16px !important;
        }

        .nav-pills {
            border-top-right-radius: 9px !important;
        }
        .profile-image{
            border: 1px solid #737070;
            display: flex;
            justify-content: center;
            align-content: center;
            flex-direction: column;
            align-items: center;
            background: #f2f5f6;
            border-radius: 1rem;
            height: 15rem;
        }
    </style>
</head>

<body class="container-fluid bg-white vh-100 overflow-hidden imagesB p-0">
  
    <div class="row">
       
        <div class="col-sm-8 col-sm-offset-2">
             <div class="mt-5 mb-5">
                            <div style="color:white" class="d-flex justify-content-end  align-items-baseline">
                                <h3 class="text-center font-weight-bold" style="margin-right: 13rem; font-size: 2rem;">
                                    Create New Account
                                </h3>
                    <label class="font-weight-bold">Looking for Advertisment?&nbsp;<a color="color:#b4cbff" href="#">Apply as Influencer</a></label>
                            </div>
                        </div>
            <!--      Wizard container        -->
            <div>
                <div class="card wizard-card" data-color="azzure" id="wizard" style="min-height:57rem !important">
                    <form action="" method="" novalidate="novalidate">
                        <!--        You can switch ' data-color="azzure" '  with one of the next bright colors: "blue", "green", "orange", "red"          -->

                       
                        <div class="wizard-navigation" style="margin-right: -1px; margin-left: -1px;">
                            <ul class="nav nav-pills" style="margin-top: -11px;background-color: #ebebeb;
                                border-top-left-radius: 9px;">
                                                            <li class="active font-weight-bold" style="width: 50%;"><a href="#details" data-toggle="tab" aria-expanded="true"<a href="#details" data-toggle="tab" aria-expanded="true" style="
                                color: white !important;
                                background: #2881ac;padding-bottom: 2rem;padding-top:2rem;
                                border-top-left-radius: 9px;
                                border-top-right-radius: 30px;
                                border-bottom-right-radius: 30px;"                        class="">  Sign up Basic Information</a></li>
                                <li class="font-weight-bold" style="width: 50%;"><a href="#captain" data-toggle="tab" aria-expanded="false" style="color: gray !important;padding-bottom: 2rem;padding-top:2rem;border-top-right-radius: 9px;   background-color: #ebebeb;"> Business Information</a></li>
                            </ul>
                            @*<div class="moving-tab" style="width: 205.667px; transform: translate3d(0px, 0px, 0px); transition: all 0.3s ease-out 0s;">Details</div>*@
                        </div>
                        <div class="tab-content" style="margin-bottom: 4rem !important">
                            <div class="tab-pane active" id="details">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <button class="btn  btn-block col-sm-10 col-sm-offset-1 my-4" style="background-color: #ECF2FC;  color:black;"
                                                type="submit">
                                            <i class="me-2 fab fa-apple">&nbsp;</i>  Continue with Apple
                                        </button>
                                    </div>
                                    </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <button class="btn  btn-block  mb-2 col-sm-10 col-sm-offset-1" style="background-color: #4285F4; color:white"
                                                type="submit">
                                            <i class="fab fa-google me-2"></i> Continue with Google
                                        </button>
                                    </div>
                                </div>
                                <div class="flex-container my-4">
                                    <div class="flex-item"></div><span style="margin-right: 1rem; margin-left: 1rem; color: #b6a8a8; font-weight: 700;">Or</span><div class="flex-item"></div>
                                </div>
                                    <div class="row">
                                    <div class="col-sm-5 col-sm-offset-1">
                                        <div class="form-group">
                                            @*<label>What city is your boat in?</label>*@
                                            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="First Name">
                                        </div>
                                    </div>
                                    <div class="col-sm-5">
                                        <div class="form-group">
                                            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Last Name">
                                        </div>
                                    </div>                                   
                                </div>
                                <div class="row"> 
                                    <div class="col-sm-10 col-sm-offset-1">
                                        <div class="form-group">
                                            @*<label>What city is your boat in?</label>*@
                                            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Work Eamil">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-5 col-sm-offset-1">
                                        <div class="form-group">
                                            @*<label>What city is your boat in?</label>*@
                                            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Password ">
                                        </div>
                                    </div>
                                    <div class="col-sm-5">
                                        <div class="form-group">
                                            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Confirm Password">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-10 col-sm-offset-1">
                                        <div class="form-group">
                                            <div class="form-group">
                                               
                                                <select class="form-control">
                                                    <option disabled="" selected="">Country</option>
                                                    <option>Austrial</option>
                                                    <option>Canada</option>
                                                    <option>Pakistan</option>
                                                    <option>Afghanistan</option>
                                                    <option>USA</option>
                                                    <option>Iran</option>
                                                    <option>India</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane" id="captain">
                                <div class="row">
                                    <div class="col-sm-2 ">
                                        <div class="profile-image">
                                            <img src="/signup/upload.png" class="image-icons " style="width:30px; height:30px; margin-bottom:1rem;" />
                                            <span class="font-weight-bold">Uploade Image</span>
                                        </div>
                                    </div>
                                    <div class="col-sm-10 ">
                                        <div class="form-group row">
                                            <label for="inputEmail3" class="col-sm-2 text-bold text-center col-form-label">Name</label>
                                            <div class="col-sm-9 col-sm-offset-0">
                                                <input type="email" class="form-control" id="inputEmail3">
                                            </div>
                                        </div>
                                       <div class="form-group row">
                                            <label for="inputEmail3" class="col-sm-2 text-bold text-center col-form-label">Type</label>
                                            <div class="col-sm-9 col-sm-offset-0">
                                                <select class="form-control">
                                                    <option>Fruits</option>
                                                    <option>Game</option>
                                                    <option>Race</option>                                                  
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="inputEmail3" class="col-sm-2 text-bold text-center col-form-label">Sub Type</label>
                                            <div class="col-sm-9 col-sm-offset-0">
                                                <select class="form-control">
                                                    <option>Cricket</option>
                                                    <option>Hockey</option>
                                                    <option>Mango</option>
                                                    <option>Apple</option>
                                                    <option>Car Race</option>
                                                    <option>Motor Bike</option>
                                                </select>
                                            </div>
                                        </div>
                                          <div class="form-group row">
                                            <label for="inputEmail3" class="col-sm-2 text-bold text-center col-form-label">Reach</label>
                                            <div class="col-sm-9 col-sm-offset-0">
                                                <label class="radio-inline">
                                                    <input type="radio" name="optradio1" >Global
                                                </label>
                                                <label class="radio-inline">
                                                    <input type="radio" name="optradio1">National
                                                </label>
                                                <label class="radio-inline">
                                                    <input type="radio" name="optradio1">Local
                                                </label>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="inputEmail3" class="col-sm-2 text-bold text-center col-form-label">For</label>
                                            <div class="col-sm-9 col-sm-offset-0">
                                                <label class="radio-inline">
                                                    <input type="radio" name="optradio" >Male
                                                </label>
                                                <label class="radio-inline">
                                                    <input type="radio" name="optradio">Female
                                                </label>
                                                <label class="radio-inline">
                                                    <input type="radio" name="optradio">Transgender
                                                </label>
                                                <label class="radio-inline">
                                                    <input type="radio" name="optradio">All
                                                </label>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="inputEmail3" class="col-sm-2 text-bold text-center col-form-label">Description</label>
                                            <div class="col-sm-9 col-sm-offset-0">
                                                <textarea class="form-control" rows="5" id="description"></textarea>
                                            </div>
                                        </div>
                                </div>
                            </div>
                        
                        </div>
                        <div class="wizard-footer" >
                            <div class="pull-right">
                                <input type="button" class="btn btn-next btn-fill btn-info btn-wd btn-sm" name="next" value="Next" style="">
                                <input type="button" class="btn btn-finish btn-fill btn-info btn-wd btn-sm" name="finish" value="Create" style="display: none;">
                            </div>
                            <div class="pull-left">
                                <input type="button" class="btn btn-previous btn-fill btn-default btn-wd btn-sm disabled" name="previous" value="Previous">
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </form>
                </div>
            </div> <!-- wizard container -->
             <div class="form-group row ml-5 mt-4">
                                           
                                            <div class="col-12">
                        
                    <div class="custom-control custom-checkbox mr-sm-2">
                        <input type="checkbox" class="custom-control-input" id="customControlAutosizing">
                            <label class="custom-control-label text-light" for="customControlAutosizing">
                                Yes, I understand and agree to the Yield Terms of Services, Including the User Agreement and Privacy Policy.
                            </label>
                 
                    </div>

                                            </div>
                                        </div>
        </div>
    </div>



</body>

<!--   Core JS Files   -->
<script src="/wizard/js/jquery-2.2.4.min.js" type="text/javascript"></script>
<script src="/wizard/js/bootstrap.min.js" type="text/javascript"></script>
<script src="/wizard/js/jquery.bootstrap.wizard.js" type="text/javascript"></script>

